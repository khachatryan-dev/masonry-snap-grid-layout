{
  "name": "masonry-snap-grid-layout",
  "version": "1.0.3",
  "description": "A performant, responsive masonry layout library with smooth animations, dynamic columns, and zero dependencies.",
  "keywords": [
    "masonry",
    "grid",
    "layout",
    "responsive",
    "typescript",
    "animation",
    "vanilla-js",
    "masonry-layout"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.js"
      },
      "require": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react.tsx --dts --format esm,cjs --legacy-output",
    "dev": "tsup src/index.ts src/react.tsx --watch --dts --format esm,cjs --legacy-output"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khachatryan-dev/masonry-snap-grid-layout.git"
  },
  "homepage": "https://github.com/khachatryan-dev/masonry-snap-grid-layout#readme",
  "bugs": {
    "url": "https://github.com/khachatryan-dev/masonry-snap-grid-layout/issues"
  },
  "author": "Aram Khachatryan <arkhachat@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "devDependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "tsup": "8.3.5",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}
